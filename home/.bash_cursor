#!/bin/bash
# Auto-setup for AI agent shell environment
if [[ "$PS1" != *🤖* ]]; then
  unset HISTFILE
  export NVM_DIR="$HOME/.nvm"
  [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
  command -v nvm >/dev/null 2>&1 && nvm use
  PS1="🤖\n\$ "
  export GIT_PAGER=""
  export PAGER="cat"
  export EDITOR="nano"
  echo "🤖 Shell setup complete"
else
  echo "🤖 Shell already configured"
fi
